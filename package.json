{
  "name": "readitlater2",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app": "pnpm run --filter 'readlater-app'",
    "ext": "pnpm run --filter 'readlater-extension'",
    "dev": "pnpm --parallel --recursive dev",
    "dev:libs": "pnpm --parallel --filter '@readlater/*' dev",
    "build:libs": "pnpm --filter '@readlater/*' build",
    "build:extension": "pnpm --filter 'readlater-extension' build:crx && cp packages/extension/readlater-extension.crx packages/app/public/",
    "build": "pnpm build:libs && pnpm build:extension && pnpm --filter 'readlater-app' build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test run",
    "typecheck": "pnpm -r typecheck"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "this is a project to build Read It Later (Pocket) replacement without server side, so users can own their data and don't have to self host backend.",
  "devDependencies": {
    "eslint": "^9.29.0",
    "pnpm": "^9.0.0"
  },
  "main": "browser-test.js",
  "directories": {
    "doc": "docs"
  }
}
