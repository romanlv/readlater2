{
  "manifest_version": 3,
  "name": "ReadLater",
  "version": "1.0.0",
  "description": "Save articles for later reading with one click",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "identity"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "https://sheets.googleapis.com/*",
    "https://www.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon-192.png",
      "32": "icon-192.png",
      "48": "icon-192.png",
      "128": "icon-192.png"
    }
  },
  
  "icons": {
    "16": "icon-192.png",
    "32": "icon-192.png",
    "48": "icon-192.png",
    "128": "icon-192.png",
    "192": "icon-192.png",
    "512": "icon-512.png"
  },
  
  "oauth2": {
    "client_id": "936857689188-f4jepc4pamt7q7cg97ommee95cn2urpl.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/drive.metadata.readonly"
    ]
  }
}