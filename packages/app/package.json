{
  "name": "readlater-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "tunnel": "dotenv -e .env -- sh -c 'cloudflared tunnel run --token $CLOUDFLARED_TOKEN'",
    "typecheck": "tsc -b --noEmit",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy:gh-pages": "pnpm build",
    "generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 public/logo.svg",
    "test": "vitest"
